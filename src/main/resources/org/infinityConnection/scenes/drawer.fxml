<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinityConnection.scenes.drawer.DrawerSceneController">
   <top>
      <ImageView fitHeight="150.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/infinityblack.png" />
         </image>
      </ImageView>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="btnInformation" prefHeight="40.0" prefWidth="255.0" text="I N F O R M A T I O N" />
            <JFXButton fx:id="btnClient" prefHeight="40.0" prefWidth="255.0" text="C O N N E C T  T O" />
            <JFXButton fx:id="btnServer" prefHeight="40.0" prefWidth="255.0" text="C O N N E C T I O N  I N F O" />
            <JFXButton fx:id="btnMembers" prefHeight="40.0" prefWidth="255.0" text="M E M B E R S" />
         </children>
      </VBox>
   </center>
   <bottom>
      <JFXButton fx:id="btnExit" onAction="#onExit" prefHeight="40.0" prefWidth="255.0" style="-fx-background-color: #ecf0f1;" text="E X I T" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </JFXButton>
   </bottom>
</BorderPane>
